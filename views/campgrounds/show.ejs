<%- include("../partials/header") %>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        <!--Map goes here-->
        </div>
        <div class="col-md-9">
           
        <!--campground info display card-->
            <div class="card">
                <img src="<%=campground.image%>" class="card-img-top">
                <div class="card-body d-inline-flex justify-content-between pb-0">         
                            <h5 class="card-text"><a><strong><%=campground.name%></strong> by <%=campground.author.username%></a></h5>
                            <h5 class="card-text">$9.00/night</h5>
                </div>
                <div class="card-body"><p><%=campground.description%></p></div> 
            </div>   
        
        <!--Comments-->
            <div class="card mt-3">
                <div class="card-body">
                    <div class="text-right">
                        <a class="btn btn-success" href="/campgrounds/<%=campground._id%>/comments/new">Add new Comment</a>
                    </div>
                
                
                <%campground.comments.forEach(function(comment){%>
                   <div class="row mt-3">
                        <div class="col-md-12">
                                <strong><%=comment.author.username%></strong>
                                <div class="float-right">
                                    <span>10 days ago</span>
                                </div>   
                            <p>
                                <%=comment.text%>
                            </p>
                        </div>
                    </div>
                <% }) %>
            
                </div>
            
            </div>
            
        </div>
    </div>
</div>


<%- include("../partials/footer") %>