<%- include("partials/header") %>
    
<div class = 'container'>
    <header class = 'jumbotron'>
        <div class = "container">
            <h1>Campgrounds to Explore</h1>
            <p>Browse all of our awesome campgrounds</p>
            <a class = "btn btn-primary" href = "/campgrounds/new">Add New Campground</a>
        </div>
    </header>

    <div class = "row">
        <div class = "col-lg-12">        
                <h3>Our most popular Campgrounds</h3>          
        </div>
    </div>

<div class="row">
    <%  campgrounds.forEach(function(campground){   %>
    <!--if not using figures, would have to use: display:flex; flex-wrap:wrap; 
        uneven image size - one thing can be done is to scale up images to thumbnail size (don't accept anything smaller?)
    -->
        <div class = "col-sm-6 col-md-3">
            <figure class="figure">
                <img class = "figure-img img-thumbnail" src = "<%= campground.image %>">
                <figcaption class="figure-caption text-center"> <strong><%= campground.name %></strong></figcaption>
                <p class = "text-center mt-3">
                    <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More Info</a>
                </p>
            </figure>
        </div>
    <% });  %>
</div>

</div>


<%- include("partials/footer") %>
